&constants ! more about gyre_force, please read ../src/froutend/gyre_force.fpp
/

&model
    model_type = 'EVOL'
    file = profile
    file_format = 'MESA'
/

&mode
    l = 2
    m = -2
    static = .FALSE.
/
&mode
    l = 2
    m = 0
    static = .FALSE.
/
&mode
    l = 2
    m = 2
    static = .FALSE.
/

&osc
    nonadiabatic = .TRUE.
    outer_bound = 'VACUUM'
    alpha_trb = 1.8 ! ratio between the mixing length and the pressure scale height
/

&rot
    Omega_rot_source = 'UNIFORM' ! stellar rotation
    Omega_rot = 1.82
    Omega_rot_units = 'CYC_PER_DAY'
/

&num
    diff_scheme = 'MAGNUS_GL2'
    restrict_roots = .FALSE.
    nad_search = 'CONTOUR'
/

&force ! more namelist options see ../src/par/gyre_force_par.fpp
    force_type = 'BINARY' ! will use the orbital information of the system such as orbital period
    Phi = 1.0 ! Phi = 1 gives the unit tidal potential, −(GM1/R1)(r/R1)^2
    k = 1
/

&scan
    grid_type = 'LINEAR'
    freq_min = 0.1 ! minimum forcing frequency
    freq_max = 20.0  ! maximum forcing frequency
    freq_min_units = 'CYC_PER_DAY' ! dimensionless unit, cgs unit/dynamical timescale
    freq_max_units = 'CYC_PER_DAY'
    n_freq = 1000
/


&orbit ! more namelist options see ../src/par/gyre_orbit_par.fpp
    Omega_orb = 0.1775104 ! orbital frequency, default of the unit is dimensionless
    Omega_orb_units = 'CYC_PER_DAY'
    q = 0.00639
    e = 0.53 ! eccentricity
    sync_fraction = 3.0 ! the ratio between the star spin frequency and the synchronization frequency described in Equation C13 of Burkhart et al 2012: Tidal asteroseismology: Kepler’s KOI-54
    sync_rot = .true.
/


&grid
    w_ctr = 10
    w_osc = 10
    w_exp = 2
/


&ad_output
    summary_file = 'tide_force_ad.h5'
    summary_file_format = 'HDF'
    summary_item_list = 'l,m,omega,freq,M_star,R_star,L_star,x_ref,xi_r_ref,xi_h_ref,lag_L_ref'
    freq_units='CYC_PER_DAY'
/


&nad_output
    summary_file = 'tide_force_nad.h5'
    summary_file_format = 'HDF'
    summary_item_list = 'l,m,omega,freq,M_star,R_star,L_star,x_ref,xi_r_ref,xi_h_ref,lag_L_ref'
    freq_units='CYC_PER_DAY'
/

&tide_output
    summary_file = 'tide_force.h5'
/
